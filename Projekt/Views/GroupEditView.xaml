<UserControl x:Class="Projekt.Views.GroupEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:viewmodels="clr-namespace:Projekt.ViewModels"
             d:DataContext="{d:DesignInstance Type={x:Type viewmodels:GroupEditViewModel}, IsDesignTimeCreatable=True}">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                       Text="Edycja Grupy" 
                       FontSize="18" FontWeight="Bold" 
                       Margin="0,0,0,20" 
                       HorizontalAlignment="Center"/>

            <!-- Group Number -->
            <Label Grid.Row="1" Content="Numer grupy:"/>
            <TextBox Grid.Row="1" Grid.Column="1" 
                     Text="{Binding GroupNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     IsEnabled="{Binding IsLoading}"/>

            <!-- Faculty -->
            <Label Grid.Row="2" Content="Wydział:"/>
            <ComboBox Grid.Row="2" Grid.Column="1" 
                      SelectedItem="{Binding CurrentFaculty, Mode=TwoWay}" 
                      ItemsSource="{Binding Faculties, Mode=OneWay}"
                      IsEnabled="{Binding IsLoading}"/>

            <!-- Degree -->
            <Label Grid.Row="3" Content="Kierunek:"/>
            <ComboBox Grid.Row="3" Grid.Column="1" 
                      SelectedItem="{Binding CurrentDegree, Mode=TwoWay}" 
                      ItemsSource="{Binding Degrees, Mode=OneWay}"
                      IsEnabled="{Binding IsLoading}"/>

            <!-- Semester -->
            <Label Grid.Row="4" Content="Semestr:"/>
            <ComboBox Grid.Row="4" Grid.Column="1" 
                      SelectedItem="{Binding CurrentSemester, Mode=TwoWay}" 
                      ItemsSource="{Binding Semesters, Mode=OneWay}"
                      IsEnabled="{Binding IsLoading}"/>

            <!-- Loading Indicator -->
            <ProgressBar Grid.Row="5" Grid.ColumnSpan="2" 
                         Height="20" Margin="0,10"
                         IsIndeterminate="{Binding IsLoading}"
                         Visibility="{Binding IsLoading}"/>

            <!-- Buttons -->
            <Grid Grid.Row="6" Grid.Column="1" Margin="0,20,0,0" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Content="Zapisz" 
                        Command="{Binding SaveCommand}" 
                        Width="100" Margin="0,0,10,0" 
                        HorizontalAlignment="Right"
                        IsEnabled="{Binding IsLoading}"/>
                <Button Grid.Column="1"  
                        Content="Anuluj" 
                        Command="{Binding CancelCommand}" 
                        Width="100" 
                        HorizontalAlignment="Right"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>