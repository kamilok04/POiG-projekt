<UserControl x:Class="Projekt.Views.GroupDeleteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:viewmodels="clr-namespace:Projekt.ViewModels"
             d:DataContext="{d:DesignInstance Type={x:Type viewmodels:GroupDeleteViewModel}, IsDesignTimeCreatable=True}">
    <Grid>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                       Text="Usuwanie Grupy" 
                       FontSize="18" FontWeight="Bold" 
                       Margin="0,0,0,20" 
                       HorizontalAlignment="Center"
                       Foreground="DarkRed"/>

            <!-- Group Info Display -->
            <Label Grid.Row="1" Content="Numer grupy:"/>
            <TextBlock Grid.Row="1" Grid.Column="1" 
                       Text="{Binding GroupNumber}" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>

            <Label Grid.Row="2" Content="Wydział:"/>
            <TextBlock Grid.Row="2" Grid.Column="1" 
                       Text="{Binding Faculty}"
                       VerticalAlignment="Center"/>

            <Label Grid.Row="3" Content="Kierunek:"/>
            <TextBlock Grid.Row="3" Grid.Column="1" 
                       Text="{Binding Degree}"
                       VerticalAlignment="Center"/>

            <Label Grid.Row="4" Content="Semestr:"/>
            <TextBlock Grid.Row="4" Grid.Column="1" 
                       Text="{Binding Semester}"
                       VerticalAlignment="Center"/>

            <Label Grid.Row="5" Content="Liczba studentów:"/>
            <TextBlock Grid.Row="5" Grid.Column="1" 
                       Text="{Binding StudentCount}"
                       VerticalAlignment="Center"
                       FontWeight="Bold">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding StudentCount}" Value="0">
                                <Setter Property="Foreground" Value="Green"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=StudentCount}" Value="True">
                                <Setter Property="Foreground" Value="Red"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Warning Message -->
            <TextBlock Grid.Row="6" Grid.ColumnSpan="2" 
                       Text="{Binding WarningMessage}"
                       Margin="0,20,0,20"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       FontWeight="Bold">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CanDelete}" Value="False">
                                <Setter Property="Foreground" Value="Red"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CanDelete}" Value="True">
                                <Setter Property="Foreground" Value="Orange"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Loading Indicator -->
            <ProgressBar Grid.Row="7" Grid.ColumnSpan="2" 
                         Height="20" Margin="0,10"
                         IsIndeterminate="{Binding IsLoading}"
                         Visibility="{Binding IsLoading}"/>

            <!-- Buttons -->
            <Grid Grid.Row="8" Grid.Column="1" Margin="0,20,0,0" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Content="Usuń" 
                        Command="{Binding DeleteCommand}" 
                        Width="100" Margin="0,0,10,0" 
                        HorizontalAlignment="Right"
                        Background="DarkRed"
                        Foreground="White"
                        FontWeight="Bold">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CanDelete}" Value="False">
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <Setter Property="Background" Value="Gray"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Grid.Column="1"  
                        Content="Anuluj" 
                        Command="{Binding CancelCommand}" 
                        Width="100" 
                        HorizontalAlignment="Right"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>