<UserControl x:Class="Projekt.Views.UsersCreateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt.Views"
             xmlns:viewmodels="clr-namespace:Projekt.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type={x:Type viewmodels:UsersCreateViewModel}, IsDesignTimeCreatable=True}"
             
    >
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibiltyConverter"/>
    </UserControl.Resources>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            
        </Grid.ColumnDefinitions>
  
        <Label>Imię: </Label>
        <TextBox Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
       
        
        <Label Grid.Row="1">Nazwisko:</Label>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Surname,UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="2">Login:</Label>
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition  Width="100px"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Grid.Column="1" HorizontalAlignment="Right" Padding="10,0,10,0" Command="{Binding SuggestLoginCommand}"  Width="100px" >Zaproponuj</Button>
        </Grid>
        <Label Grid.Row="3">Hasło:</Label>
        <Grid Grid.Row="3" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100px"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Grid.Column="1" HorizontalAlignment="Right" Padding="10,0,10,0" Command="{Binding RandomPasswordCommand}" Width="100px">Losuj</Button>
        </Grid>

        <Label Grid.Row="4">Poziom uprawnień:</Label>
        <ComboBox Grid.Row="4" Grid.Column="1" 
                  SelectedItem="{Binding CurrentRole, Mode=TwoWay}" 
                  ItemsSource="{Binding Roles, Mode=OneWay}" />
        
        <!--Pola dla Studenta-->
        <Grid Grid.Row="5" Grid.ColumnSpan="2" Visibility="{Binding IsStudentVisible, FallbackValue=Collapsed, Converter={StaticResource BoolToVisibiltyConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0">Data urodzenia:</Label>
            <DatePicker Grid.Column="1" Grid.Row="0" SelectedDate="{Binding BirthDate}"/>

            <Label Grid.Row="1">E-Mail:</Label>
            <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="2">Przedmioty:</Label>
            <ListBox Grid.Column="1" Grid.Row="2" ItemsSource="{Binding AllSubjects}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding SubjectName}" IsChecked="{Binding IsSelectedSubject, Mode=TwoWay}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>


        <!--Pola dla Prowadzącego-->
        <Grid Grid.Row="5" Grid.ColumnSpan="2" Visibility="{Binding IsTeacherVisible, FallbackValue=Collapsed, Converter={StaticResource BoolToVisibiltyConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0">Data urodzenia:</Label>
            <DatePicker Grid.Column="1" Grid.Row="0" SelectedDate="{Binding BirthDate}"/>

            <Label Grid.Row="1">Tytuł:</Label>
            <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding TeacherTitle, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="2">Stanowisko:</Label>
            <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Position, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="3">E-Mail:</Label>
            <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

        </Grid>

        <Grid Grid.Row="6" Grid.Column="1" Margin="0,10,0,0" HorizontalAlignment="Right">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button Content="Zatwierdż" Command="{Binding SaveCommand}" Width="100" Margin="0,0,10,0" HorizontalAlignment="Right"/>
        <Button Grid.Column="1"  Content="Anuluj" Command="{Binding CancelCommand}" Width="100" HorizontalAlignment="Right"/> 
        </Grid>
     </Grid>
</UserControl>

